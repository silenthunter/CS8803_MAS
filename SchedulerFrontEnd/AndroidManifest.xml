<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="scheduler.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    
	<permission android:name="scheduler.android.permission.C2D_MESSAGE" android:protectionLevel="signature" />
	<uses-permission android:name="scheduler.android.permission.C2D_MESSAGE" />
	
	<uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="scheduler.android.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="scheduler.android.Schedule"
            android:label="@string/title_activity_schedule" >
        </activity>
        <activity
            android:name="scheduler.android.GoogleCalendarActivity"
            android:label="@string/title_activity_schedule" >
        </activity>
        <activity
            android:name="scheduler.android.Choose_Calendar"
            android:label="@string/title_activity_choose_calendar" >
		</activity>
		<activity
            android:name="scheduler.android.AddEvent"
            android:label="@string/title_activity_add_event" >
        </activity>
        <activity
            android:name="scheduler.android.EventView"
            android:label="@string/title_activity_event_view" >
        </activity>
        
        <receiver android:name="com.google.android.gcm.GCMBroadcastReceiver" android:permission="com.google.android.c2dm.permission.SEND">
	        <intent-filter>
	            <action android:name="com.google.android.c2dm.intent.RECEIVE" />
	            <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
	            <category android:name="com.appvengers.Jarvis" />
	        </intent-filter>
    	</receiver>
    	
        <service android:name=".GCMIntentService" />
    </application>

</manifest>